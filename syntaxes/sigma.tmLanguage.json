{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sigma",
  "scopeName": "source.sigma",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#booleans"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.sigma",
          "match": "--(?!-).*$",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.sigma"
            }
          }
        },
        {
          "name": "comment.block.sigma",
          "begin": "---",
          "end": "---",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.sigma"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sigma",
          "match": "\\$(if|el|for|while|time_start|time_end|set_timeout|set_interval)\\b"
        },
        {
          "name": "keyword.control.flow.sigma",
          "match": "\\b(return)\\b"
        },
        {
          "name": "keyword.other.sigma",
          "match": "\\b(fn)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.sigma",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*:",
          "captures": {
            "1": {
              "name": "entity.name.function.sigma"
            }
          }
        },
        {
          "name": "support.function.sigma",
          "match": "\\b(yap)\\s*\\("
        },
        {
          "name": "meta.function-call.sigma",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\.run\\s*\\(",
          "captures": {
            "1": {
              "name": "entity.name.function.sigma"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sigma",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sigma",
              "match": "\\\\(n|t|r|\\\\|\")"
            },
            {
              "name": "variable.other.sigma",
              "match": "\\{[a-zA-Z_][a-zA-Z0-9_]*\\}"
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.decimal.sigma",
          "match": "\\b\\d+\\.\\d+\\b"
        },
        {
          "name": "constant.numeric.integer.sigma",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.sigma",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.sigma",
          "match": "\\+\\+|--|\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.comparison.sigma",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.sigma",
          "match": ":"
        },
        {
          "name": "keyword.operator.logical.sigma",
          "match": "&&|\\|\\||!"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.sigma",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  }
}